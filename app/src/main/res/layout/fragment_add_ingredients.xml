<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.recipeit.recipeit.AddIngredients">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contain_ingr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toBottomOf="@id/contain_ingr">

        <Spinner
            android:id="@+id/listingr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <TextView
            android:id="@+id/quantite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_q"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:fontFamily="@font/ralewaylight"
            app:layout_constraintTop_toBottomOf="@id/listingr" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="3"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/quantite"
            app:layout_constraintStart_toEndOf="@+id/quantite"
            app:layout_constraintTop_toBottomOf="@+id/listingr" />

        <ImageView
            android:id="@+id/imgRemoveIngr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/menuouvert"
            app:layout_constraintBottom_toBottomOf="@+id/editText2"
            app:layout_constraintStart_toEndOf="@+id/editText2"
            app:layout_constraintTop_toTopOf="@+id/editText2" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
