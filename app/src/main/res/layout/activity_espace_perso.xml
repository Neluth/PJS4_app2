<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.recipeit.recipeit.Espace_perso">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/banniere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fond"
        app:layout_constraintTop_toBottomOf="parent"
        android:paddingTop="45dp"
        android:paddingBottom="45dp">

        <TextView
            android:id="@+id/titreEspaceP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_espace_perso1"
            android:fontFamily="@font/cookie"
            android:textAlignment="center"
            android:textColor="@color/noir"
            android:textSize="50sp"/>
        <TextView
            android:id="@+id/titreEspaceP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_espace_perso2"
            android:fontFamily="@font/ralewaylight"
            android:textAlignment="center"
            android:textColor="@color/noir"
            android:textSize="27sp"
            app:layout_constraintTop_toBottomOf="@+id/titreEspaceP1"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/barre"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/rouge"
            android:layout_marginEnd="140dp"
            android:layout_marginStart="140dp"
            app:layout_constraintTop_toBottomOf="@id/titreEspaceP2"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contain_creer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/guidelinestart"
        app:layout_constraintTop_toBottomOf="@id/banniere"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="20dp"
        android:onClick="ajoutRecette"
        android:background="@color/common_google_signin_btn_text_light_disabled">

        <TextView
            android:id="@+id/titrecreer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_creer1"
            android:textAlignment="center"
            android:fontFamily="@font/cookie"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/titrecreer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_creer2"
            android:textAlignment="center"
            android:fontFamily="@font/ralewaylight"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@id/titrecreer1"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/rouge"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            app:layout_constraintTop_toBottomOf="@id/titrecreer2"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contain_fridge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guidelineend"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/banniere"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/common_google_signin_btn_text_light_disabled">

        <TextView
            android:id="@+id/titrefridge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_fridge1"
            android:textAlignment="center"
            android:fontFamily="@font/cookie"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/titrefridge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_fridge2"
            android:textAlignment="center"
            android:fontFamily="@font/ralewaylight"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@id/titrefridge1"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/rouge"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            app:layout_constraintTop_toBottomOf="@id/titrefridge2"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contain_favoris"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/guidelinestart"
        app:layout_constraintTop_toBottomOf="@id/contain_creer"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/common_google_signin_btn_text_light_disabled">

        <TextView
            android:id="@+id/titrefavoris1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_favoris1"
            android:textAlignment="center"
            android:fontFamily="@font/cookie"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/titrefavoris2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_favoris2"
            android:textAlignment="center"
            android:fontFamily="@font/ralewaylight"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@id/titrefavoris1"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/rouge"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            app:layout_constraintTop_toBottomOf="@id/titrefavoris2"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contain_compte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guidelineend"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/contain_creer"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:onClick="parametre">

        <TextView
            android:id="@+id/titrecompte1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_compte1"
            android:textAlignment="center"
            android:fontFamily="@font/cookie"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/titrecompte2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titre_compte2"
            android:textAlignment="center"
            android:fontFamily="@font/ralewaylight"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@id/titrecompte1"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/rouge"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            app:layout_constraintTop_toBottomOf="@id/titrecompte2"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guidelinestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />
    <android.support.constraint.Guideline
        android:id="@+id/guidelineend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</android.support.constraint.ConstraintLayout>